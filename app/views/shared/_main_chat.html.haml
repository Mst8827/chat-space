.MainChat

  .MainChat__header
  
    .MainChat__header__GroupInfo
      .MainChat__header__GroupName
      = link_to group_messages_path(@group) do
        = @group.name
      .MainChat__header__CurrentGroup
        .MainChat__header__CurrentGroup__name Member : 
        %ul
          - @group.users.each do |user|
            %li= user.name
          
    .MainChat__header__RightBox
      = link_to "#" do
        .MainChat__header__RightBox__EditBtn Edit
      


  .MainChat__MessageList
    = render @messages

