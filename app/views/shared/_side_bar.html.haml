.SideBar
  .SideBar__header
    .SideBar__header__info
      .SideBar__header__info__name 
        = current_user.name
      .SideBar__header__info__icons
        = link_to new_group_path do
          = icon('fas', 'edit', class: 'EditBtn')
        = link_to edit_user_path(current_user) do
          = icon('fas', 'cog', class: 'CogBtn')

  .SideBar__GroupList
    - current_user.groups.each do |group|
      .SideBar__GroupList__GroupInfo
        = link_to group_messages_path(group) do
          %p.SideBar__GroupList__GroupInfo__name
            = group.name
          %p.SideBar__GroupList__GroupInfo__comment 
            = group.show_last_message 
      
